<h1>Shortify your links!</h1>

<%= render 'form' %>

<!--Incase current user has no Links up, do not display the Link listing. -->
<% if @author_links.count > 0 %>

    <table>
      <thead>
      <tr>
        <th style="width:140px">Original Link</th>
        <th style="width:240px">Shortened Link</th>
        <th style="width:140px">Click Count</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @author_links.each do |link| %>
          <tr>
            <td><%= link.original_link %></td>
            <td><%= root_url + link.shortened_link %></td>
            <td><%= link.click_count %></td>
            <td><%= link_to 'Apagar Link', '/links/'+link.id.to_s, method: :delete %></td>
          </tr>

      <% end %>
      </tbody>

<% end %>
</table>